FROM ubuntu:20.04

ENV DEBIAN_FRONTEND=noninteractive

# ----------------------------
# Dependências básicas
# ----------------------------
RUN apt-get update && apt-get install -y \
    build-essential \
    git \
    autoconf \
    automake \
    libtool \
    pkg-config \
    python3 \
    wget \
    ca-certificates \
    g++ \
    clang \
    llvm \
    llvm-dev \
    libclang-dev \
    libgmp-dev \
    libmpfr-dev \
    libmpc-dev \
    libisl-dev \
    && rm -rf /var/lib/apt/lists/*

# ----------------------------
# Diretório de trabalho
# ----------------------------
WORKDIR /opt

# ----------------------------
# PET (compatível com isl do 20.04)
# ----------------------------
RUN git clone https://repo.or.cz/pet.git && \
    cd pet && \
    ./autogen.sh && \
    ./configure && \
    make -j$(nproc) && \
    make install

# ----------------------------
# PPCG
# ----------------------------
RUN git clone https://repo.or.cz/ppcg.git && \
    cd ppcg && \
    ./autogen.sh && \
    ./configure && \
    make -j$(nproc) && \
    make install

RUN ldconfig

WORKDIR /workspace

CMD ["/bin/bash"]
